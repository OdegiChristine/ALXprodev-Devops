#!/bin/bash

# Define variables
POKEMON="pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"
API_URL="https://pokeapi.co/api/v2/pokemon/$POKEMON"

# Make API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Check if request was successful
STATUS_CODE=$(cat status_code.txt)
rm status_code.txt

if [ "$STATUS_CODE" -ne 200 ]; then
  echo "Error: Failed to retrieve data for $POKEMON (Status code: $STATUS_CODE)" >> "$ERROR_FILE"
  exit 1
fi

echo "Successfully retrieved data for $POKEMON and saved to $OUTPUT_FILE"
